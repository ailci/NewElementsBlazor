@if (!string.IsNullOrEmpty(ImageMimeType) && Image is not null)
{
    <img width="150" src="data:@ImageMimeType;base64,@Convert.ToBase64String(Image)" @attributes="AdditionalAttributes" />
}
else
{
    <img width="150" src="https://place-hold.it/150" @attributes="AdditionalAttributes" />
}

@code {
    [Parameter, EditorRequired]
    public byte[]? Image { get; set; }

    [Parameter, EditorRequired]
    public string? ImageMimeType { get; set; }

    [Parameter(CaptureUnmatchedValues = true)] // Für alle anderen Attribute, die nicht mit [Parameter] übergeben wurden
    public Dictionary<string,object>? AdditionalAttributes { get; set; }
}
